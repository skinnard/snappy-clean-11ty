<!-- faq -->
<div class="py-32mil-subscribe mil-up" id="faq">
    <div class="container">
        <div class="mil-section-title mil-mb-f mil-up">
            <h2 class="mil-fs-36">FAQ</h2>
            <div class="mil-dots"></div>
            <b class="mil-fs-24">07</b>
        </div>
        <div class="row mil-mb-60">
            <div class="col-lg-6">
                {% for item in faq %}
                    {% if (loop.index <= 4) %}
                        <div class="mil-mb-15 mil-up">
                            <button class="mil-accordion mil-fw-600 mil-fs-20">{{ item.title }}<span class="mil-icon mil-sm mil-bg-m-3">+</span>
                            </button>
                            <div class="mil-panel">
                                <p class="mil-lh-160 mil-fs-18">{{ item.content|safe }}</p>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="col-lg-6">
                {% for item in faq %}
                    {% if (loop.index >= 5) %}
                        <div class="mil-mb-15 mil-up">
                            <button class="mil-accordion mil-fw-600 mil-fs-20">{{ item.title }}<span class="mil-icon mil-sm mil-bg-m-3">+</span>
                            </button>
                            <div class="mil-panel">
                                <p class="mil-lh-160 mil-fs-18">{{ item.content|safe }}</p>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 mil-mb-30 mil-up">
                <p class="mil-lh-160 mil-fs-18">Didn&rsquo;t find the answer to your question? Visit our Contact page and let us help! We&rsquo;re
                    here to provide the information you need. Reach out to us anytime &mdash; we'd love to assist you!</p>
            </div>
            <div class="col-lg-6 mil-jce mil-sm-jcs mil-mb-30 mil-up">
                <a href="/contact" class="mil-btn mil-bg-m-2-light mil-br-xl mil-hover-bg-a-1 mil-hover-scale mil-icon-btn">Contact
                    us<i class="far fa-envelope mil-bg-m-4 mil-m-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- faq end -->