                {% for item in deepCleaningFaq %}
                    {% if (loop.index <= 4) %}
                        <div class="mil-mb-15">
                            <button class="mil-accordion mil-fw-600 mil-fs-20">{{ item.title }}<span class="mil-icon mil-sm mil-bg-m-3">+</span>
                            </button>
                            <div class="mil-panel">
                                <p class="mil-lh-160 mil-fs-18">{{ item.content|safe }}</p>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="col-lg-6">
                {% for item in deepCleaningFaq %}
                    {% if (loop.index >= 5) %}
                        <div class="mil-mb-15">
                            <button class="mil-accordion mil-fw-600 mil-fs-20">{{ item.title }}<span class="mil-icon mil-sm mil-bg-m-3">+</span>
                            </button>
                            <div class="mil-panel">
                                <p class="mil-lh-160 mil-fs-18">{{ item.content|safe }}</p>
